{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": [
    "standard"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "quotes": ["error", "double"],
    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "named": "never"
    }],
    "object-curly-newline": "off",
    "object-property-newline": "off"
  },
  "globals": {
    "describe": true,
    "it": true,
    "beforeEach": true,
    "ethers": true,
    "waffle": true,
    "usePlugin": true,
    "task": true
  }
}
